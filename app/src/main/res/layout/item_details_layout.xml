<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/low_white"
    android:clipToPadding="false"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/action_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myreact"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/two_dp"
        android:layout_marginBottom="@dimen/three_dp"
        android:elevation="@dimen/five_dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/fourty_dp"
            android:layout_weight=".5"
            android:gravity="start|center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/remove_single_item_cart"
                android:layout_width="@dimen/twenty_eight"
                android:layout_height="@dimen/twenty_eight"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/home_item_details_text_size"
                android:layout_marginTop="@dimen/home_item_details_text_size"
                android:layout_marginEnd="@dimen/home_item_details_text_size"
                android:layout_marginRight="@dimen/home_item_details_text_size"
                android:layout_marginBottom="@dimen/home_item_details_text_size"
                android:src="@drawable/delete_new_icon"
                android:text="Customer"
                android:textSize="12sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/srno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="sr"
                android:textColor="@color/grays"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_itemName"
            android:layout_width="0dp"
            android:layout_height="@dimen/fourty_five_dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="itemname"
                    android:gravity="center"
                    android:textSize="@dimen/ten_sp"
                    android:textColor="@color/grays"/>

               <!-- <TextView
                    android:id="@+id/itemName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" X "
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/home_item_details_text_size" />-->


                <!--<TextView
                    android:id="@+id/multi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/home_item_details_text_size" />-->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/home_listview_itemdetails_height"
            android:layout_weight="1.5"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">

          <!--  <TextView
                android:id="@+id/totalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Amt:"
                android:textSize="@dimen/home_item_details_text_size"
                android:visibility="visible" />-->

            <TextView
                android:id="@+id/itemPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="price"
                android:visibility="visible"
                android:textSize="@dimen/home_item_details_text_size"
                android:textColor="@color/grays"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1" >



            <TextView
                android:id="@+id/multi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:layout_weight=".9"
                android:layout_marginTop="2.5dp"
                android:textColor="@color/white"
                android:background="@color/radio_button_color"
                style="@style/Base.CardView"
                android:shadowColor="@color/mcustomer_header_color"
                android:backgroundTint="@color/radio_button_color"
                android:defaultFocusHighlightEnabled="true"
                android:textSize="@dimen/home_item_details_text_size" />
            <ImageView
                android:id="@+id/edit_quantity_image"
                android:layout_width="@dimen/twenty_eight"
                android:layout_height="@dimen/twenty_eight"
                android:layout_marginRight="@dimen/twelvedp"
                android:background="@drawable/edit_new_icon"
                android:layout_marginLeft="@dimen/eight_dp"
                />



        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
