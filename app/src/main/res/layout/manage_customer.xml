<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/add_inventory_bg_color"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/open_drawer"
            android:padding="@dimen/ten_dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:src="@drawable/menu" />

        <TextView
            android:layout_marginLeft="@dimen/twenty_five"
            android:layout_width="wrap_content"
            android:text="Manage Customers"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="@dimen/fourdp"
            android:layout_marginTop="@dimen/five_dp"
            android:gravity="center"
            android:textSize="@dimen/twentytwo_sp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/ten_dp"
            android:drawableEnd="@drawable/search"
            android:layout_marginBottom="@dimen/fourdp"
            android:layout_marginTop="@dimen/three_dp"
            android:hint="   Search customer by Name,Mobile,Email.."
            android:inputType="text"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/one_hundred_thirty"
            android:layout_marginRight="@dimen/ten_dp"
            android:elevation="7dp"
            android:background="@drawable/border_home_search"
            android:textSize="@dimen/add_expenduture_textsize"/>

    </LinearLayout>

    <View
        android:id="@+id/viewI"
        android:layout_below="@+id/linear"
        android:background="@color/stripcolor"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/two_dp"
        android:layout_height="2dp"/>

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewI"
        android:weightSum="9"
        android:layout_marginTop="@dimen/ten_dp"
        android:background="@color/all_reports_header_bg_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/srno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:text="S.No."
            android:textAlignment="center"
            android:textSize="@dimen/ll_allreports_textsize"
            android:layout_marginLeft="@dimen/five_dp"/>


        <TextView
            android:layout_marginStart="@dimen/five_dp"
            android:id="@+id/customerid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:textAlignment="center"
            android:text="Customer ID"
            android:textSize="@dimen/ll_allreports_textsize"  />

        <TextView
            android:layout_marginStart="@dimen/five_dp"
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="left"
            android:text="First Name"
            android:textSize="@dimen/ll_allreports_textsize"  />

        <TextView
            android:layout_marginStart="@dimen/five_dp"
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="left"
            android:text="Last Name"
            android:textSize="@dimen/ll_allreports_textsize"  />

        <TextView
            android:layout_marginStart="@dimen/five_dp"
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:singleLine="true"
            android:text="Mobile"
            android:textSize="@dimen/ll_allreports_textsize" />


        <TextView
            android:singleLine="true"
            android:layout_marginStart="@dimen/five_dp"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Email"
            android:textSize="@dimen/ll_allreports_textsize"  />


        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Sex"
            android:textSize="@dimen/ll_allreports_textsize"  />

        <TextView
            android:layout_marginStart="@dimen/five_dp"
            android:id="@+id/itemEdit"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Edit"
            android:textSize="@dimen/ll_allreports_textsize"  />

        <TextView
            android:layout_marginStart="@dimen/five_dp"
            android:id="@+id/itemDelete"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Delete"
            android:textSize="@dimen/ll_allreports_textsize"  />




    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@+id/ll_header"
        android:background="@color/stripcolor"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.15"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/v_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/six_dp"
                android:layout_marginLeft="@dimen/six_dp"
                android:visibility="visible">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.85"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginLeft="@dimen/checkpoint_width"
                android:background="@color/add_inventory_bg_color"
                android:layout_alignParentBottom="true"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="right">

                <ListView
                    android:layout_width="wrap_content"
                    android:id="@+id/listView"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/horizontalScrollView">

                </ListView>

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:id="@+id/number"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/horizontalScrollView"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnLay"
                        android:orientation="horizontal" >
                        <TextView
                            android:textSize="18sp"
                            android:drawablePadding="10dp"
                            android:gravity="left"
                            android:id="@+id/previous"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="18sp"
                            android:drawablePadding="10dp"
                            android:gravity="right"
                            android:layout_toRightOf="@id/number"
                            android:id="@+id/next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>