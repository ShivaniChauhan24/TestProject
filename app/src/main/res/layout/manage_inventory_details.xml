<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_header_width"
        android:background="@drawable/myreact"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/srno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="sr"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="@dimen/manage_inventory_textsize"
            android:layout_marginLeft="@dimen/home_item_details_text_size"/>


        <TextView
            android:id="@+id/productname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Product Name"
            android:textSize="@dimen/manage_inventory_textsize" />



        <TextView
            android:id="@+id/quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Quantity"
            android:textSize="@dimen/manage_inventory_textsize" />


        <TextView
            android:id="@+id/discount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Discount"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="@dimen/manage_inventory_textsize" />


        <TextView
            android:id="@+id/unitprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Unit Price"
            android:textSize="@dimen/manage_inventory_textsize" />




            <ImageView
                android:id="@+id/itemEdit"
                android:layout_width="0dp"
                android:layout_height="@dimen/add_expenduture_textsize"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:src="@drawable/edit_new_icon"  />


        <ImageView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="@dimen/add_expenduture_textsize"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:src="@drawable/delete_new_icon" />

    </LinearLayout>
    <include layout="@layout/bottom_line"/>


</LinearLayout>