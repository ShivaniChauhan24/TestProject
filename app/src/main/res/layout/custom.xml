<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/ten_dp"
    android:layout_marginRight="@dimen/ten_dp"
    android:elevation="@dimen/ten_dp"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:elevation="@dimen/five_dp"
        app:cardElevation="@dimen/five_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/fifteen_dp"
        app:cardCornerRadius="@dimen/five_dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="@dimen/sixty_dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:padding="@dimen/three_dp"
                android:layout_marginRight="@dimen/two_dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:src="@drawable/triangle"
                    android:layout_gravity="end"
                    android:layout_height="40dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/two_dp"
                android:layout_gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:textColor="@color/red"
                    android:text="Alert...!!!"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/five_dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_height="match_parent" />

            </LinearLayout>


        </LinearLayout>




    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/ten_dp"
            android:text="Are you sure? You want to logout. "
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="@dimen/fifteen_dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/no_logout"
            android:layout_width="wrap_content"
            android:text="No"
            android:layout_marginRight="@dimen/fifteen_dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/yes_logout"
            android:layout_width="wrap_content"
            android:text="Yes"
            android:layout_marginLeft="@dimen/fifteen_dp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:backgroundTint="@color/green_circle"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>