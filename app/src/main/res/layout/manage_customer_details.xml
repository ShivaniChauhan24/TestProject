<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/ll_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_header_width"
        android:background="@drawable/myreact"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/srno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:textAlignment="center"
            android:text="S.No."
            android:textSize="@dimen/ll_allreports_textsize"
            />

        <TextView
            android:layout_marginStart="@dimen/five_dp"
            android:id="@+id/customerid"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Customer ID"
            android:textSize="@dimen/ll_allreports_textsize"  />

        <TextView
            android:layout_marginStart="@dimen/five_dp"
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:text="First Name"
            android:textSize="@dimen/ll_allreports_textsize"  />

        <TextView
            android:layout_marginStart="@dimen/five_dp"
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Last Name"
            android:textSize="@dimen/ll_allreports_textsize"  />

        <TextView
            android:layout_marginStart="@dimen/five_dp"
            android:id="@+id/mobile"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:singleLine="true"
            android:text="Mobile Number"
            android:textSize="@dimen/ll_allreports_textsize" />


        <TextView
            android:singleLine="true"
            android:layout_marginStart="@dimen/five_dp"
            android:id="@+id/email"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Email Address"
            android:textSize="@dimen/ll_allreports_textsize"  />


        <TextView
            android:layout_marginStart="@dimen/five_dp"
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Sex"
            android:textSize="@dimen/ll_allreports_textsize"  />



        <ImageView
            android:id="@+id/itemEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_expenduture_textsize"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:src="@drawable/edit_new_icon"  />

        <ImageView
            android:id="@+id/itemDel"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="@dimen/add_expenduture_textsize"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/delete_new_icon"  />

        </LinearLayout>


    <include layout="@layout/bottom_line"/>


</LinearLayout>